

@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'

#conversationPanel
    background-color: black
    width: 100%
    height: 100vh
    overflow: scroll

.add-message-form input[type=text]
    width: 100%
    display: block
    background-color: #5bc0de
    height: 3em 
    font-size: 1em

.search-bar
    width: 100%
    display: block
    height: 2.5em 
    font-size: 1em
    border: none
    border-bottom: 2px solid green
    padding: 0 1em

.conversationSidebar
    background-color: black
    height: 100vh
    overflow: scroll



.speech-whispper{
  padding: 30px 40px;
  .bubble{
    width: 500px;
    height: auto;
    display: block;
    background: #f5f5f5;
    border-radius: 17px;
    box-shadow: 1px 3px 2px #5bc0de;
    position: relative;
    margin: 0 0 25px;
    &.sender{
      margin: 0 0 0 60px;
    }
    .bubble-txt{
      padding: 8px 55px 8px 14px;
      .bubble-name{
        font-weight: 600;
        font-size: 12px;
        margin: 0 0 4px;
        color: #3498db;
        span{
          font-weight: normal;
          color: #b3b3b3;
        }
        &.sender{
          color: #2ecc71;
        }
      }
      .bubble-message{
        font-size: 12px;
        margin: 0;
        color: #2b2b2b;
      }
      .bubble-timestamp{
        font-size: 11px;
        position: absolute;
        bottom: 8px;
        right: 10px;
        text-transform: uppercase; color: #999
      }
    }
    .bubble-arrow {
      position: absolute;
      width: 0;
      bottom:42px;
      left: -16px;
      height: 0;
      &.sender{
        right: -2px;      
        bottom: 40px;
        left: auto;
      }
    }
    .bubble-arrow:after {
      content: "";
      position: absolute;
      border: 0 solid transparent;
      border-top: 9px solid #f5f5f5;
      border-radius: 0 20px 0;
      width: 15px;
      height: 30px;
      transform: rotate(145deg);
    }
    .bubble-arrow.sender:after {
      transform: rotate(45deg) scaleY(-1);
    }
  }
}